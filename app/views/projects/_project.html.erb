<div class="project" id="<%= dom_id(project) %>">
  <h3><%= project.name %></h3>
  <p><%= project.technologies_used %></p>
  <%= image_tag project.image_url.to_s %>
  <div class="nav">
    <%= link_to 'Show', project %> |
    <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, id: 'delete_project_link', remote: true %> |
    <%= link_to 'Edit', edit_project_path(project), id: "edit_project_link_#{project.id}", remote: true %>
  </div>
</div>
