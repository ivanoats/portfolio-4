<h3> Comments: </h3>
<% @commentable.comments.each do |comment| %>
  <table>
    <% if comment.approved? || (current_user &&current_user.editor?) %>
      <tr>
        <td>By: <%= comment.author %></td>
      </tr>
      <tr>
        <td>Email: <%= comment.author_email %></td>
      </tr>
      <tr>
        <td>Content: <%= comment.content %></td>
      </tr>
    <% end %>
    <% if current_user && current_user.editor? %>
      <tr>
        <td><%= button_to 'Delete', post_comment_path(@commentable, comment), method: :delete %></td>
        <% unless comment.approved? %>
          <td><%= button_to 'Approve', post_comment_path(@commentable, comment, comment: {approved: true}), method: :put %> </td>
        <% end %>
      <tr>
    <% end %>
  </table><br>
<% end %>


